            {% if is_granted('ROLE_ADMIN') %}
                <a class="nav-link hoverable-light d-flex align-items-center justify-content-center fs-6 border-0 px-3"
                href="{{ path('admin') }}"
                ><i class="fa fa-user-cog text-primary"></i></a>
