<turbo-frame id="attachments_previews">
        <div class="row">
            {% for attachment in attachments %}
                {% set previewUrl = preview_attachment(attachment) %}
                <div class="col mt-2">
                        <div class="img-thumbnail thumbnail position-relative" style="background-image: url('{{ previewUrl }}');">
                                <a href="{{ path('delete_attachment', { id: attachment.id }) }}" class="btn btn-danger btn-sm position-absolute" style="top: 5px; right: 5px;">
                                    <i class="fa-solid fa-trash-alt"></i>
                                </a>
                        </div>
                </div>
            {% endfor %}
        </div>
</turbo-frame>
