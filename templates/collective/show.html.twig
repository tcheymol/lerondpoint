{% extends 'templates/card_page.html.twig' %}

{% block title %}{{ collective.name|trans }}{% endblock %}
{% block bodybg %}secondary{% endblock %}

{% block cardContent %}
    <hr/>
    {% if collective.iconPath %}
        <div class="row">
            <div class="col-12 col-sm-6 offset-sm-3 d-flex justify-content-center">
                <img style="width: 150px" class="me-2" src="{{ collective.iconPath }}"  alt="{{ 'Collective'|trans }}"/>
            </div>
        </div>
    {% endif %}

    {{ include('collective/components/_actions.html.twig', { actions: collective.actions }) }}
    <br/>
    <a href="{{ path('track_list', { collective: collective.id }) }}">{{ 'ViewCollectiveTracks'|trans }}</a>
    <br/>
    <br/>
    <h5>{{ collective.shortDescription }}</h5>
    <br/>
    {{ collective.description }}
    <br/>
    <br/>
    <u> {{ 'ContactUs'|trans }} :</u>
    {% if is_email(collective.contactUs) %}
       <a href="{{ collective.contactUs }}">{{ collective.contactUs }}</a>
    {% else %}
        <span>{{ collective.contactus }}</span>
    {% endif %}

    <br/>
    <u> {{ 'FollowUs'|trans }} :</u>
    {% if is_url(collective.followUs) %}
        <a href="{{ collective.followUs }}">{{ collective.followUs }}</a>
    {% else %}
        <span>{{ collective.followUs }}</span>
    {% endif %}
    <br/>
{% endblock %}
