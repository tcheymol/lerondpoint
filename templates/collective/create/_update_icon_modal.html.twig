<div class="modal fade" id="updateIconModal" tabindex="-1" aria-labelledby="updateIconModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="updateIconModalLabel">{{ 'UpdateIcon'|trans }}</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="{{ 'Close'|trans }}"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    {% for action in get_actions() %}
                        <div class="col-3">
                            <button class="btn btn-link p-0" style="width: 50px"
                                    {{
                                        stimulus_controller('update_collective_icon', {
                                            iconPath: action.iconPublicPath(true),
                                            imagePreviewElementId: 'autocompleteIconPreviewImage',
                                            fieldElementId: 'collective_iconPath',
                                        })
                                        |stimulus_action('update_collective_icon', 'updateIcon')
                                    }}
                            >
                                <img style="width: 50px" src="{{ action.iconPublicPath }}" alt="{{ action.name }}"/>
                            </button>
                        </div>
                    {% endfor %}
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">{{ "Close"|trans }}</button>
            </div>
        </div>
    </div>
</div>