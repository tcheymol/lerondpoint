{% extends 'templates/base.html.twig' %}

{% block title %}{{ 'TracksListTitle'|trans }}{% endblock %}
{% block bodybg %}light{% endblock %}

{% block content %}
    <div class="row h-100"
        {{ stimulus_controller('async_search', {url: path('track_search')}) }}
    >
        <h1 class="col-12 text-center text-dark mt-3">{{ 'TracksListTitle'|trans }}</h1>

        <h5 class="text-center text-dark">{{ 'TracksListSubtitle'|trans }}</h5>
        <div class="col-12 col-md-10 offset-md-1">
           {{ include('track/components/form/_search_form.html.twig', {form}) }}
        </div>

        {{ include('track/components/_results_container.html.twig', {tracks}) }}
    </div>
{% endblock %}
