{% extends 'base.html.twig' %}

{% block title %}{{ 'Tracks'|trans }}{% endblock %}

{% block content %}
    <div class="h-100 row " {{ stimulus_controller('video_preview') }}>
        <div class="col-12">
            <div class="row">
                <div class="col-12 col-sm-8 col-md-6 offset-sm-2 offset-md-3 p-4">
                    <div class="card p-4 w-100">
                        <h1>{{ 'EnterUrl'|trans }}</h1>
                        {{ form_start(form) }}
                        {{ form_widget(form.url, {attr: {
                            'data-video-preview-target': 'input',
                            'data-action': 'video-preview#preview',
                        }}) }}
                            <button class="btn btn-primary mt-4">{{ 'CreateTrack'|trans }}</button>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12 col-sm-8 col-md-6 offset-sm-2 offset-md-3 d-flex align-items-center justify-content-center">
                    <img src="" alt="" {{ stimulus_target('video-preview', 'preview') }} style="max-width: 90vw">
                </div>
            </div>
        </div>
    </div>
{% endblock %}
