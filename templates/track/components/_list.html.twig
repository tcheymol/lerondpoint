{{ include('components/_loader.html.twig') }}
<div class="row px-3">
    {% if tracks|length == 0 %}
        <div class="p-3">
            <div class="alert alert-warning" role="alert">
                {{ 'NoTracksMessage'|trans }}
            </div>
        </div>
    {% else %}
        {% for track in tracks %}
            <div class="col-6 col-sm-4 col-md-3 p-1 mt-4">
                {{ include('track/components/preview/_thumbnail_image.html.twig', {track, url}) }}
                {{ include('track/components/preview/_thumbnail_information.html.twig', {track}) }}
            </div>
        {% endfor %}
    {% endif %}
</div>
