{% if tracks|length == 0 %}
    <div class="p-3">
        <div class="alert alert-warning" role="alert">
            {{ 'NoTracksMessage'|trans }}
        </div>
    </div>
{% else %}
    {% for track in tracks %}
        <div class="col-6 col-sm-4 col-md-3 p-1 mt-4">
            {{ include('track/components/preview/_thumbnail_image_link.html.twig', {track}) }}
            {{ include('track/components/preview/_thumbnail_information.html.twig', {track}) }}
        </div>
    {% endfor %}
{% endif %}
