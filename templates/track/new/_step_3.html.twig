<div class="row d-flex align-items-start">
    <div class="col-12 col-sm-6 d-none d-sm-flex flex-column justify-content-center">
        {{ include('track/new/_step_preview.html.twig', {track, step: 3}) }}
    </div>
    <div class="col-12 col-sm-6">
        <div class="text-start">{{ form_label(form.description) }}</div>
        {{ form_widget(form.description) }}

        {% if not is_granted('ROLE_USER') %}
            <div class="mt-2 text-start">
                {{ 'ConfirmCreationLeaveEmail1'|trans }}
                {{ form_widget(form.email) }}
                {{ 'ConfirmCreationLeaveEmail2'|trans }}
            </div>
        {% endif %}
    </div>
</div>
