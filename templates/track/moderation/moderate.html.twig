{% extends 'base.html.twig' %}

{% block title %}Moderation{% endblock %}
{% block bodybg %}warning{% endblock %}

{% block content %}
    <div class="text-dark h-100 p-2 flex-column">
        <div>{{ include('components/_back.html.twig') }}</div>
        <h1>{{ track.name }}</h1>
        <div class="p-4">
            <div class="row">
                <div class="col-12 col-sm-7">
                    {% if track.url %}
                        {{ include('track/components/_track_video.html.twig', {track}) }}
                    {% else %}
                        {{ include('track/components/_track_image.html.twig', {track}) }}
                    {% endif %}
                </div>
                <div class="col-12 col-sm-5 text-start">
                    {{ include('track/components/_previous_next_track.html.twig', {track}) }}
                    {{ include('track/components/_information_rows.html.twig', {track}) }}
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12 col-sm-6">
                <a class="btn btn-danger border-dark hover-underline w-100"
                   href="{{ path('moderate_track_reject' , {id: track.id}) }}"
                >
                    {{ "Refuse"|trans }}
                </a>
            </div>
            <div class="col-12 col-sm-6">
                <a class="btn btn-success border-dark hover-underline w-100 "
                   href="{{ path('moderate_track_accept' , {id: track.id}) }}"
                >
                    {{ "Accept"|trans }}
                </a>
            </div>
        </div>
    </div>
{% endblock %}
