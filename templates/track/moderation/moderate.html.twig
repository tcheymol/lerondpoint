{% extends 'templates/base.html.twig' %}

{% block title %}{{ 'Moderation'|trans }}{% endblock %}
{% block bodybg %}warning{% endblock %}

{% block javascripts %}
    <script src=" https://cdn.jsdelivr.net/npm/swiper@11.2.8/swiper-bundle.min.js "></script>
    {{ parent() }}
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />
    {{ parent() }}
{% endblock %}

{% block content %}
    <div class="text-dark h-100 p-2 flex-column">
        <h1>{{ track.name }}</h1>
        <div class="p-4">
            <div class="row">
                <div class="col-12 col-sm-7">
                    {{ include('track/components/glider/_glider.html.twig', {track, moderate: true}) }}
                </div>
                <div class="col-12 col-sm-5 text-start">
                    {{ include('track/moderation/_moderate_buttons.html.twig', {track}) }}
                    {{ include('track/components/_information_rows.html.twig', {track}) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
