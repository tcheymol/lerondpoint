{% extends 'base.html.twig' %}

{% block title %}{{ 'FollowUps'|trans }}{% endblock %}
{% block bodybg %}light{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdn.jsdelivr.net/npm/@geoapify/geocoder-autocomplete@2.0.3/styles/minimal.min.css" rel="stylesheet">
{% endblock %}

{% block content %}
    <div {{ stimulus_controller('map', { collectives, enableDroms: true }) }} class="position-relative h-100 w-100">
        <div id="map" class="h-100 w-100"></div>
        {{ include('map/_autocomplete.html.twig') }}
        {{ include('map/_droms.html.twig') }}
        <div class="modal text-dark" tabindex="-1" id="collectiveDetailsModal">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title"></h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-header">
                        <h6 class="modal-title">{{ 'Actions'|trans }}</h6>
                    </div>
                    <div class="modal-body">
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">{{ 'Close'|trans }}</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
