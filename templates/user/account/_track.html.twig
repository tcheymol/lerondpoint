<div class="card text-bg-white mt-3 rounded-0 shadow">
    <div class="card-header rounded-0 bg-primary border-bottom-0 plaine">{{ track.name }}</div>
    <div class="card-body pt-0">
        <div class="row">
            <div class="col-12 col-sm-6 mt-2">
                {{ include('track/components/_preview.html.twig', {track, size: 100, noRows: true}) }}
            </div>
            <div class="col-12 col-sm-6 d-flex flex-column">
                <div class="row flex-grow-1">
                    {{ include('track/components/_information_rows.html.twig', {track, noName: true, hideDescription: true}) }}
                </div>
                <div class="row d-flex justify-content-between">
                    <div class="col text-end">
                        <a class="btn btn-link" href="{{ path('track_show', {id: track.id}) }}">{{ 'KnowMore'|trans }}</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
