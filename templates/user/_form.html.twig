 {{ form_start(form) }}
    {{ form_label(form.email) }}
    {{ form_widget(form.email) }}
    {{ form_errors(form.email) }}
     <div class="alert alert-info mt-2">
         <i class="fa fa-info-circle me-2"></i>{{ 'UsernameDisclaimer'|trans }}
     </div>
    {{ form_label(form.username) }}
    {{ form_widget(form.username) }}
    {{ form_errors(form.username) }}
    {{ form_label(form.plainPassword.first) }}
    {{ form_widget(form.plainPassword.first) }}
     <div class="progress rounded-0">
         <div class="progress-bar progress-bar-striped bg-danger" id="passwordStrengthProgress" role="progressbar" style="width: 1%" aria-valuenow="1" aria-valuemin="0" aria-valuemax="0">
            <span class="d-none" id="weakPasswordText">{{ 'WeakPassword'|trans }}</span>
            <span class="d-none" id="mediumPasswordText">{{ 'MediumPassword'|trans }}</span>
            <span class="d-none" id="strongPasswordText">{{ 'StrongPassword'|trans }}</span>
         </div>
     </div>
    {{ form_errors(form.plainPassword.first) }}
    {{ form_label(form.plainPassword.second) }}
    {{ form_widget(form.plainPassword.second) }}
    {{ form_errors(form.plainPassword.second) }}
    <div class="text-end">
        <button class="btn btn-lg btn-success mt-3 disabled" type="submit" id="passwordFormButton" disabled>
            {{ button_label|default('Update'|trans) }}
        </button>
    </div>
{{ form_end(form) }}
