<form
        method="post"
        action="{{ path('app_user_delete', {'id': user.id}) }}"
        onsubmit="return confirm('‼️‼️ Attention, cette action est irréversible, êtes vous sûr·e de vouloir continuer ?');"
>
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
    <button class="btn btn-danger">{{ 'DeleteMyAccount'|trans }}</button>
</form>
