<div class="accordion" id="acceptTermsAccordion">
    <div class="accordion-item">
        <h2 class="accordion-header">
            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                {{ 'TermsOfUse'|trans }}
            </button>
        </h2>
        <div id="collapseOne" class="accordion-collapse collapse show" data-bs-parent="#acceptTermsAccordion">
            <div class="accordion-body">{{ include('legal/_terms.html.twig') }}</div>
        </div>
    </div>
    <div class="accordion-item">
        <h2 class="accordion-header">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                {{ 'PrivacyPolicy'|trans }}
            </button>
        </h2>
        <div id="collapseTwo" class="accordion-collapse collapse" data-bs-parent="#acceptTermsAccordion">
            <div class="accordion-body">{{ include('legal/_privacy.html.twig') }}</div>
        </div>
    </div>
</div>
